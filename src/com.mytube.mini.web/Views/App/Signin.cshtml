@model com.mytube.mini.web.ViewModels.SigninViewModel
@{
    ViewBag.Title = "Sign In";
}

@section scripts{
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
}

<div class="row ">
    <div class="col-md-6 offset-3">
        <h4>Sign in Page</h4>
        <form method="post">

            <div asp-validation-summary="ModelOnly">
                @if (ViewBag.UserMessage != null)
                {
                    <div>@ViewBag.UserMessage</div>
                }
            </div>
            <span asp-validation-summary="ModelOnly"></span>

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message">Message</label>
                <textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>

            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default btn-lg">Cancel</a>
                <input type="submit" value="Sign in" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>